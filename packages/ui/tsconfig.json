{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "rootDir": "./src",
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/react-cad/types",
      "../react-cad/types"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["**/__tests__/**/*"]
}
