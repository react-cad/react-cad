{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/react-cad/types"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.stories.*"]
}
