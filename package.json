{
  "name": "@react-cad/react-cad",
  "private": true,
  "scripts": {
    "start": "nps",
    "build": "nps build",
    "lint": "nps lint",
    "test": "nps test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{c,cpp,h}": [
      "clang-format -i -style=file"
    ],
    "*.{js,jsx,ts,tsx,json,yml}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/emscripten": "^1.39.4",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-reconciler": "^0.18.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-jest": "^26.6.3",
    "clang-format": "^1.5.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
